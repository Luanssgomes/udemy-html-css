        <h1 style="color:purple; font-size: 40px; border-bottom: 1px solid red">Mudar tamanho da fonte</h1>


    <!-- 3. internal CSS -->
        <!--lá no head ^-->
        <p>Eu fui estilizado pelo internal</p>
        <p>Mais um</p>
        <p>E outro</p>

    <!-- 50. position stick -->
        <div class="stick">
            <span>Eu sou stick!</span>
        </div>

    <!-- 4. extenal CSS -->
        <!-- head -->
        <h3>Meu título verde</h3>
    
        
    <!-- 5. ordem do CSS -->
        <p style="color:red">Ordem do CSS</p>
        <p>Ordem do CSS 2</p>


    <!-- 6. multiplos CSS -->
        <!-- chamar o aquivo com "link" no head -->
        <ul>
            <li>Banana</li>
            <li>Maçã</li>
            <li>Morango</li>
        </ul>


    <!-- 7. Desafio -->
